<div>
  <h1> List of Users </h1>
</div>

<form action = "/<%=@the_user%>">

  <label for = "user_name_box"> 
    Username
  </label>
  <input type = "text" id = "user_name_box" name = "user_name" value = "Enter a username">



  <button>
    Add user
  </button>

</form>

<hr>

<table border = 1>
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <td>

    </td>
  </tr>
<% @list_of_all_users.each do |user|  %>
  <tr>
    <td>
      <%= user.id%>
    </td>

    <td>
      <%= user.username %>
    </td>

    <td>
      <a href = "/users/<%=user.username%>"> Show Details </a>
    </td>
  </tr>

<%end%>

</table>
