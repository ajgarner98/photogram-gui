<ul>
  <li>
    <a href = "/users">
      Users
    </a>
  </li>

  <li>
    <a href = "/photos">
      Photos
    </a>
  </li>
</ul>

<div>
  <h1> Photo Details </h1>
</div>

<div>
  Caption
</div>
<div>
  <%=@the_photos.caption%>
</div>

<div>
  Owner
</div>
<div>
  <%=@the_photos.poster.username%>
</div>

<div>
  Posted
</div>

<div>
  <%=@the_photos.created_at%>
</div>

<div>
  <table>
    <tr>
      <th>
        Commenter
      </th>

      <th>
        Comment
      </th>

      <th>
        Posted
      </th>

    </tr>
    <%@the_photos.comments.each do |comment|%>
      <tr>
        <td> 
        <%=comment.commenter.username%>
        </td>

        <td>
        <%=comment.body%>
        </td>

        <td>
        <%=comment.created_at%>
        </td>
      </tr>
    <%end%>
  </table>
</div>
